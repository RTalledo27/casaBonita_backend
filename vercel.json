{
  "version": 2,
  "name": "casa-bonita-api",
  "builds": [
    {
      "src": "index.php",
      "use": "vercel-php@0.7.3",
      "config": {
        "includeFiles": "**",
        "excludeFiles": [
          "node_modules/**",
          ".git/**",
          "tests/**",
          "storage/logs/**",
          "storage/framework/cache/**",
          "storage/framework/sessions/**",
          "storage/framework/views/**",
          ".env*",
          "*.md",
          "deploy.*"
        ],
        "installCommand": "composer install --no-dev --prefer-dist --optimize-autoloader",
        "buildCommand": "php artisan package:discover --ansi && php artisan config:clear && php artisan route:clear && php artisan view:clear && php artisan config:cache && php artisan route:cache"
      }
    }
  ],
  "routes": [{ "src": "/(.*)", "dest": "/index.php" }],
  "env": {
    "APP_ENV": "production",
    "APP_DEBUG": "false",
    "LOG_CHANNEL": "stderr",
    "SESSION_DRIVER": "cookie",
    "CACHE_DRIVER": "array",
    "QUEUE_CONNECTION": "sync"
  },
  "regions": ["iad1"],
  "github": { "autoAlias": false }
}
