# Casa Bonita API - Production Environment Variables
# Copy this file to configure your production environment in Vercel

# Application
APP_NAME="Casa Bonita API"
APP_ENV=production
APP_KEY=base64:your-32-character-secret-key-here
APP_DEBUG=false
APP_URL=https://your-vercel-domain.vercel.app

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=your-database-host
DB_PORT=3306
DB_DATABASE=casa_bonita_prod
DB_USERNAME=your-db-username
DB_PASSWORD=your-secure-db-password

# Cache & Session (Optimized for Vercel)
CACHE_DRIVER=array
SESSION_DRIVER=cookie
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Queue (Sync for serverless)
QUEUE_CONNECTION=sync

# Logging (Stderr for Vercel)
LOG_CHANNEL=stderr
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=your-smtp-host
MAIL_PORT=587
MAIL_USERNAME=your-email@domain.com
MAIL_PASSWORD=your-email-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@casabonita.com
MAIL_FROM_NAME="Casa Bonita"

# File Storage (Use S3 or similar for production)
FILESYSTEM_DISK=public

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://your-frontend-domain.vercel.app,https://your-custom-domain.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With
CORS_EXPOSED_HEADERS=
CORS_MAX_AGE=0
CORS_SUPPORTS_CREDENTIALS=true

# JWT Configuration (if using JWT)
JWT_SECRET=your-jwt-secret-key
JWT_TTL=60

# API Rate Limiting
API_RATE_LIMIT=60

# Security
SECURE_HEADERS=true
HSTS_ENABLED=true

# Third-party Services
# Add your API keys and service configurations here
# STRIPE_KEY=sk_live_...
# STRIPE_SECRET=sk_live_...
# GOOGLE_MAPS_API_KEY=your-google-maps-key

# Monitoring & Analytics
# SENTRY_LARAVEL_DSN=https://your-sentry-dsn
# GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Backup Configuration
BACKUP_DISK=s3
BACKUP_SCHEDULE=daily

# Performance
OPCACHE_ENABLE=true
OPCACHE_MEMORY_CONSUMPTION=128
OPCACHE_MAX_ACCELERATED_FILES=10000

# Timezone
APP_TIMEZONE=America/Mexico_City

# Locale
APP_LOCALE=es
APP_FALLBACK_LOCALE=en